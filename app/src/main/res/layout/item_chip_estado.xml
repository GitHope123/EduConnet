<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:chipIconVisible="true"
    app:chipIconTint="@color/md_theme_primary"
    app:chipBackgroundColor="@color/md_theme_surfaceVariant"
    app:chipMinTouchTargetSize="48dp"
    app:chipStartPadding="12dp"
    app:chipEndPadding="12dp"
    app:chipIconSize="24dp"
    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
    app:checkedIconTint="@color/md_theme_primary"
    app:chipStrokeWidth="0dp"
    app:chipStrokeColor="@android:color/transparent" />
